{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "jsxRuntime": "transparent",
    "formatter": {
      "semicolons": "always",
      "quoteStyle": "double"
    }
  },
  "files": {
    "ignore": ["node_modules", ".cache", "public"]
  }
}
